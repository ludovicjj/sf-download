{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="mb-4">Post! ðŸš€</h1>
        <div class="col-12 mb-4">
            <a class="btn btn-primary btn-sm" href="{{ path('admin_post_new') }}">Add a post</a>
        </div>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Slug</th>
                <th scope="col">Image</th>
                <th scope="col">Voir</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <th>{{ post.id }}</th>
                    <td>{{ post.title }}</td>
                    <td>{{ post.slug }}</td>
                    <td>
                        <img src="{{ post.imagePath|imagine_filter('squared_s3_thumbnail_small') }}" alt="">
                    </td>
                    <td><a class="btn btn-sm btn-primary" href="{{ path('admin_post_edit', {'id': post.id}) }}">Modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}